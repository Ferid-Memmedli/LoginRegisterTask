@model EntitiesLayer.Concrete.Identity.User

<form id="form">
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" disabled />
    </div>
    @if (Model.Addresses.Count > 0)
    {
        <div class="form-group">
            <label>Addresses</label>
            @foreach (var address in Model.Addresses)
            {
                <input value="@address.Name" class="form-control" disabled />
            }
        </div>
    }
    <div class="form-group">
        <div class="row">
            <div class="col">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" disabled />
            </div>
            <div class="col">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" disabled />
            </div>
        </div>
    </div>
</form>
